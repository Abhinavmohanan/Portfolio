---
//@ts-ignore
import projectImage from '../../assets/project.png';
import { Image } from 'astro:assets';
import Tags from './Tags.astro';
interface Props {
	url?: string;
	alt?: string;
	title?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
	images?: string[];
}

const { url = '#', alt = 'Project image', title = 'Project title', tags = ['Tags'], images } = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		
		<a href={url} aria-label="https://petatype.vercel.app/">
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<Image
					src={projectImage}
					alt={alt}
					format="png"
					width={400}
					height={400}
					loading="eager"
				/>
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-xl mb-4 text-black font-semibold text-center lg:text-2xl">{title}</h3>
				<div class="flex justify-center">
					<Tags tags={tags} />
				</div>
			</div>
		</a>
	</article>
</section>
